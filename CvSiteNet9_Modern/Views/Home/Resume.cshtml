@model CvSiteNet9_Modern.Models.Resume
@{
    ViewData["Title"] = $"Özgeçmiş | {Model.Name}";
    ViewData["Description"] = $"{Model.Name} özgeçmişi, profesyonel deneyimleri ve eğitim geçmişi.";
}
<section class="reveal">
    <h1 class="h3 mb-4">Özgeçmiş</h1>

    @if (Model.Metrics?.Any() == true)
    {
        <div class="metrics-grid mb-4">
            @foreach (var metric in Model.Metrics)
            {
                <div class="metric-card">
                    <div class="metric-value">@metric.Value</div>
                    <div class="metric-label">@metric.Label</div>
                </div>
            }
        </div>
    }

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card glass h-100">
                <div class="card-body">
                    <h2 class="h5 mb-3">Profesyonel Deneyim</h2>
                    <div class="timeline">
                        @foreach (var e in Model.Experiences)
                        {
                            <div class="timeline-item">
                                <div class="timeline-dot"></div>
                                <div class="timeline-card card glass">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between flex-wrap gap-2 mb-2">
                                            <div>
                                                <div class="fw-semibold">@e.Role</div>
                                                <div class="text-muted small">@e.Company • @e.Location</div>
                                            </div>
                                            <div class="badge bg-opacity small">@e.Start - @(string.IsNullOrWhiteSpace(e.End) ? "Günümüz" : e.End)</div>
                                        </div>
                                        <ul class="mb-0">
                                            @foreach (var h in e.Highlights)
                                            {
                                                <li>@h</li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card glass mb-4 mb-lg-3">
                <div class="card-body">
                    <h2 class="h6 text-uppercase text-muted">Teknik Beceriler</h2>
                    @foreach (var skill in Model.Skills)
                    {
                        <div class="skill-row">
                            <div class="fw-semibold">@skill.Heading</div>
                            <div class="text-muted">@string.Join(", ", skill.Items)</div>
                        </div>
                    }
                </div>
            </div>

            @if (Model.FocusAreas?.Any() == true)
            {
                <div class="card glass mb-4 mb-lg-3">
                    <div class="card-body">
                        <h2 class="h6 text-uppercase text-muted">Odak Alanları</h2>
                        <ul class="ps-3 mb-0">
                            @foreach (var focus in Model.FocusAreas)
                            {
                                <li class="mb-2">
                                    <div class="fw-semibold">@focus.Title</div>
                                    <div class="text-muted small">@focus.Description</div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            }

            @if (Model.Languages?.Any() == true)
            {
                <div class="card glass mb-4 mb-lg-0">
                    <div class="card-body">
                        <h2 class="h6 text-uppercase text-muted">Yabancı Dil</h2>
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var language in Model.Languages)
                            {
                                <span class="language-chip">@language.Name <span class="text-muted">(@language.Level)</span></span>
                            }
                        </div>
                    </div>
                </div>
            }

            @if (!string.IsNullOrWhiteSpace(Model.ReferenceNote))
            {
                <div class="card glass mt-4">
                    <div class="card-body">
                        <h2 class="h6 text-uppercase text-muted">Referanslar</h2>
                        <p class="mb-0 text-secondary">@Model.ReferenceNote</p>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="card glass mt-5">
        <div class="card-body">
            <h2 class="h5 mb-3">Eğitim</h2>
            <div class="row g-4">
                @foreach (var ed in Model.Educations)
                {
                    <div class="col-md-6">
                        <div class="fw-semibold">@ed.School</div>
                        <div class="text-muted small">@ed.Degree • @ed.Years</div>
                        @if (!string.IsNullOrWhiteSpace(ed.Detail))
                        {
                            <div class="mt-1 text-secondary">@ed.Detail</div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>

    <h2 class="h5 mt-5">Projeler</h2>
    <div class="grid-portfolio">
        @foreach (var p in Model.Projects)
        {
            <article class="card glass h-100 hover-lift">
                <div class="card-body">
                    <h3 class="card-title">@p.Name</h3>
                    <p>@p.Description</p>
                    <div class="d-flex gap-2 flex-wrap">
                        @if (p.Tech != null) { foreach (var t in p.Tech) { <span class="chip">@t</span> } }
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0 d-flex gap-2">
                    @if (!string.IsNullOrWhiteSpace(p.Url)) { <a class="btn btn-outline-primary btn-sm" href="@p.Url" target="_blank" rel="noopener">Demo</a> }
                    @if (!string.IsNullOrWhiteSpace(p.Repo)) { <a class="btn btn-outline-dark btn-sm" href="@p.Repo" target="_blank" rel="noopener">Kod</a> }
                </div>
            </article>
        }
    </div>
</section>
